<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java2nb.novel.dao.BookCategoryDao">
    <resultMap id="BaseResultMap" type="com.java2nb.novel.entity.BookCategoryDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="direction_id" property="directionId"/>
        <result column="sort" property="sort"/>
        <result column="custom_css" property="customCss"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select * from book_category where id = #{id}
    </select>

    <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
        select * from book_category
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="directionId != null">
                and direction_id = #{directionId}
            </if>
        </where>
        order by sort asc, id desc
    </select>

    <select id="count" parameterType="java.util.Map" resultType="int">
        select count(1) from book_category
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="directionId != null">
                and direction_id = #{directionId}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.java2nb.novel.entity.BookCategoryDO" useGeneratedKeys="true" keyProperty="id">
        insert into book_category
        (name, direction_id, sort, custom_css)
        values
        (#{name}, #{directionId}, #{sort}, #{customCss})
    </insert>

    <update id="updateById" parameterType="com.java2nb.novel.entity.BookCategoryDO">
        update book_category
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="directionId != null">direction_id = #{directionId},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="customCss != null">custom_css = #{customCss},</if>
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from book_category where id = #{id}
    </delete>

    <delete id="deleteBatch" parameterType="java.lang.Long[]">
        delete from book_category where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectByDirectionId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select * from book_category where direction_id = #{directionId} order by sort asc
    </select>
</mapper>