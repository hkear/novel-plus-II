<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java2nb.novel.dao.SystemTemplateDao">
    <resultMap id="BaseResultMap" type="com.java2nb.novel.entity.SystemTemplateDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="custom_css" property="customCss"/>
        <result column="is_default" property="isDefault"/>
        <result column="status" property="status"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select * from system_template where id = #{id}
    </select>

    <select id="selectByCode" parameterType="java.lang.String" resultMap="BaseResultMap">
        select * from system_template where code = #{code}
    </select>

    <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
        select * from system_template
        <where>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by id asc
    </select>

    <update id="updateById" parameterType="com.java2nb.novel.entity.SystemTemplateDO">
        update system_template
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="customCss != null">custom_css = #{customCss},</if>
            <if test="isDefault != null">is_default = #{isDefault},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        where id = #{id}
    </update>

    <update id="updateDefaultStatus" parameterType="java.util.Map">
        update system_template set is_default = #{isDefault}
    </update>
</mapper>