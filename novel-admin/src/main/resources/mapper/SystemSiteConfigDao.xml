<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java2nb.novel.dao.SystemSiteConfigDao">
    <resultMap id="BaseResultMap" type="com.java2nb.novel.entity.SystemSiteConfigDO">
        <id column="id" property="id"/>
        <result column="site_title" property="siteTitle"/>
        <result column="favicon_url" property="faviconUrl"/>
        <result column="logo_url" property="logoUrl"/>
        <result column="template_code" property="templateCode"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select * from system_site_config where id = #{id}
    </select>

    <update id="updateById" parameterType="com.java2nb.novel.entity.SystemSiteConfigDO">
        update system_site_config
        <set>
            <if test="siteTitle != null">site_title = #{siteTitle},</if>
            <if test="faviconUrl != null">favicon_url = #{faviconUrl},</if>
            <if test="logoUrl != null">logo_url = #{logoUrl},</if>
            <if test="templateCode != null">template_code = #{templateCode},</if>
        </set>
        where id = #{id}
    </update>
</mapper>