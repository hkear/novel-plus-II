<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java2nb.novel.dao.WorkDirectionDao">
    <resultMap id="BaseResultMap" type="com.java2nb.novel.entity.WorkDirectionDO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="sort" property="sort"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select * from work_direction where id = #{id}
    </select>

    <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
        select * from work_direction
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by sort asc, id desc
    </select>

    <select id="count" parameterType="java.util.Map" resultType="int">
        select count(1) from work_direction
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.java2nb.novel.entity.WorkDirectionDO" useGeneratedKeys="true" keyProperty="id">
        insert into work_direction
        (name, code, sort, status)
        values
        (#{name}, #{code}, #{sort}, #{status})
    </insert>

    <update id="updateById" parameterType="com.java2nb.novel.entity.WorkDirectionDO">
        update work_direction
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="code != null">code = #{code},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            update_time = now()
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from work_direction where id = #{id}
    </delete>
</mapper>